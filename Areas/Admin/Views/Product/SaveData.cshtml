@model MiniMart.Application.DTOs.ViewModel.ProductViewModel;
@{
    ViewData["Title"] = "SaveData";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_BreadScrum.cshtml")
<div class="card">
    <form asp-controller="Product" asp-action="savedata" asp-antiforgery="true" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        @Html.Raw("<div asp-validation-summary='All' class='text-danger'></div>")
                        <input type="hidden" asp-for="Id"></input>
                        <div class="form-group">
                            <label for="exampleInputCode">Code<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Code" asp-for="Code" readonly>
                        </div>
                        <div class="form-group">
                            <label>Chọn Danh Mục<span class="text-danger">*</span></label>
                            @Html.DropDownListFor(x => x.CategoryId, (IEnumerable<SelectListItem>)ViewBag.Category, "Please Select", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputProduct">Tên Sản Phẩm<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPrice">Giá Sản Phẩm<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Price" asp-for="Price">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputAvailable">Số Lượng<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Available" asp-for="Available">
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input">
                            <label class="form-check-label">Xác nhận</label>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-6">
                        <div class="form-group">
                            <label for="exampleInputAvailable">Số Lượng<span class="text-danger">*</span></label>
                            <textarea type="text" class="form-control" placeholder="Description" asp-for="Description"></textarea>
                        </div>
                        <label for="exampleInputFile">File input</label>
                        <div class="form-group">
                            @if(Model.Id != 0)
                            {
                                <img src="~/images/product/@(Model.Code).png" alt="no image" height="150" id="img-product"/>

                            }
                            else
                            {
                                <img src="#" alt="no image" height="150" id="img-product" />
                                <input type="file" class="form-control" asp-for="Image" />
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            @Html.ActionLink("Cancel", "Index", "Product", null, new { @class = "btn btn-secondary" })
        </div>
    </form>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/admin/components/productsavedata.js"></script>
}
