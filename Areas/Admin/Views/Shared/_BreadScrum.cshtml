@{
    var breadscrumModel = ViewData["BreadScrum"] as BreadScrumModel;

    if (!string.IsNullOrEmpty(breadscrumModel.Path))
    {
        var segments = breadscrumModel.Path.Split("/");
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">@breadscrumModel.Title</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            @{
                                foreach(var segment in segments)
                                {
                                    if (!string.IsNullOrEmpty(segment))
                                    {
                                        <li class="breadcrumb-item active">@segment</li>
                                    }
                                }
                            }
                                
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    }
}

