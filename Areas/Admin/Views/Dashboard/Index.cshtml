@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_BreadScrum.cshtml")
<section class="content">
    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3 id="total-amount"></h3>
                    <p>Doanh Thu</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-6 ">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3 id="total-order"></h3>

                    <p>Số đơn hàng</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <!-- /.d-flex -->
                    <div class="position-relative mb-4" id="main" style="height: 400px">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/admin/dist/js/dashboard.js"></script>
    <script src="~/admin/assets/dist/echarts.min.js"></script>
}