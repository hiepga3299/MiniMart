@using System.Security.Principal
@model IEnumerable<MiniMart.Application.DTOs.Categories.CategoryDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<header class="header-section">
    <div class="container-fluid">
        <div class="inner-header">
            <div class="logo">
                <a href="/home"><img src="~/images/logo.png" alt="" /></a>
            </div>
            <div class="header-right">
                <div class="input-group rounded">
                    <input type="search" class="form-control rounded" id="txt-search" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                    <span class="ml-2" id="search-addon">
                        <img src="~/images/icons/search.png" alt="" class="search-trigger" />
                    </span>
                    <a href="/cart/index">
                        <img src="~/images/icons/bag.png" alt="" />
                        <span class="cart-number">@(ViewData["NumberCart"] is null ? 0 : Convert.ToInt32(ViewData["NumberCart"]))</span>
                    </a>
                </div>
            </div>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="user-access">
                    <a href="#">@User.Identity.Name</a>
                    <a asp-controller="Login" asp-action="Logout" class="in">Thoat</a>
                </div>
            }
            else
            {
                <div class="user-access">
                    <a href="#">Đăng ký</a>
                    <a href="#" class="in">Đăng nhập</a>
                </div>
            }

            <nav class="main-menu mobile-menu">
                <ul>
                    <li><a class="active" href="/home">Trang chủ</a></li>
                    @foreach (var category in Model)
                    {
                        <li><a href="/product?c=@category.Id">@category.Name</a></li>
                    }

                </ul>
            </nav>
        </div>
    </div>
</header>