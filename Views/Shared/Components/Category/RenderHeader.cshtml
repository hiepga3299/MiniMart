@model IEnumerable<MiniMart.Application.DTOs.Categories.CategoryDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<header class="header-section">
    <div class="container-fluid">
        <div class="inner-header">
            <div class="logo">
                <a href="./index.html"><img src="~/images/logo.png" alt="" /></a>
            </div>
            <div class="header-right">
                <img src="~/images/icons/search.png" alt="" class="search-trigger" />
                <img src="~/images/icons/man.png" alt="" />
                <a href="#">
                    <img src="~/images/icons/bag.png" alt="" />
                    <span>2</span>
                </a>
            </div>
            <div class="user-access">
                <a href="#">Đăng ký</a>
                <a href="#" class="in">Đăng nhập</a>
            </div>
            <nav class="main-menu mobile-menu">
                <ul>
                    <li><a class="active" href="/home">Trang chủ</a></li>
                    @foreach (var category in Model)
                    {
                        <li><a href="/product?c=@category.Id">@category.Name</a></li>
                    }

                </ul>
            </nav>
        </div>
    </div>
</header>