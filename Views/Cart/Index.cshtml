
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Add Section Begin -->
<section class="page-add cart-page-add">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="page-breadcrumb">
                    <h2>Giỏ Hàng<span>.</span></h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Page Add Section End -->
<!-- Cart Page Section Begin -->
<div class="cart-page">
    <div class="container">
        <div class="cart-table">
            <table>
                <thead>
                    <tr>
                        <th class="product-h">Sản phẩm</th>
                        <th>Giá</th>
                        <th class="quan">Số lượng</th>
                        <th>Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="product-col">
                            <img src="img/product/product-1.jpg" alt="" />
                            <div class="p-title">
                                <h5>Áo sơ mi</h5>
                            </div>
                        </td>
                        <td class="price-col">$29</td>
                        <td class="quantity-col">
                            <div class="pro-qty">
                                <input type="text" value="1" />
                            </div>
                        </td>
                        <td class="total">$29</td>
                        <td class="product-close">x</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="cart-btn">
            <div class="row">
                <div class="col-lg-6">
                    <div class="coupon-input">
                        <input type="text" placeholder="Thêm mã giảm giá" />
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1 text-left text-lg-right">
                    <div class="site-btn clear-btn">Xóa giỏ hàng</div>
                    <div class="site-btn update-btn">Thêm sản phẩm</div>
                </div>
            </div>
        </div>
    </div>
    <div class="shopping-method">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="total-info">
                        <div class="total-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Giá</th>
                                        <th>Phụ thu</th>
                                        <th>Phí ship</th>
                                        <th class="total-cart">Tổng tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="total">$29</td>
                                        <td class="sub-total">$29</td>
                                        <td class="shipping">$10</td>
                                        <td class="total-cart-p">$39</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 text-right">
                                <a href="#" class="primary-btn chechout-btn">Thanh Toán</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page Section End -->
