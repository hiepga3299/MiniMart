@using System.Globalization
@model IEnumerable<MiniMart.Application.DTOs.Products.ProductCartDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Add Section Begin -->
<section class="page-add cart-page-add">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="page-breadcrumb">
                    <h2>Giỏ Hàng<span>.</span></h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Page Add Section End -->
<!-- Cart Page Section Begin -->
<div class="cart-page">
    <div class="container">
        <div class="cart-table">
            <table>
                <thead>
                    <tr>
                        <th class="product-h">Sản phẩm</th>
                        <th>Giá</th>
                        <th class="quan">Số lượng</th>
                        <th>Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tbody-cart">
                    @{
                        double totalCart = 0;
                        if(Model.Count() != 0)
                        {
                            foreach(var product in Model)
                            {
                                <tr data-code ="@product.Code">
                                    <td class="product-col">
                                        <img src="~/images/product/@(product.Code).png" alt="" />
                                        <div class="p-title">
                                            <h5>@product.Name</h5>
                                        </div>
                                    </td>
                                    <td class="price-col txt-price">@product.Price.ToString("C", CultureInfo.GetCultureInfo("vi-VN"))</td>
                                    <td class="quantity-col">
                                        <div class="pro-qty">
                                            <input type="text" class="txt-quantity" value="@product.Quantity" readonly/>
                                        </div>
                                    </td>
                                    <td class="total txt-total">@((product.Quantity * product.Price).ToString("C", CultureInfo.GetCultureInfo("vi-VN")))</td>
                                    <td class="product-close"><a class="btn-delete-cart">x</a></td>
                                </tr>
                                totalCart += (product.Quantity * product.Price);
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7"><h4>Hiện chưa có sản phẩm nào</h4></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="cart-btn">
            <div class="row">
                <div class="col-lg-6">
                    <div class="coupon-input">
                        <input type="text" placeholder="Thêm mã giảm giá" />
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1 text-left text-lg-right">
                    <div class="site-btn clear-btn">Xóa giỏ hàng</div>
                    <div class="site-btn update-btn">Thêm sản phẩm</div>
                </div>
            </div>
        </div>
    </div>
    <div class="shopping-method">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="total-info">
                        <div class="total-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="total-cart">Tổng tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="total-cart-p" id="txt-total-cart">@totalCart.ToString("C", CultureInfo.GetCultureInfo("vi-VN"))</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 text-right">
                                <a href="#" class="primary-btn chechout-btn">Thanh Toán</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page Section End -->

@section Scripts{
    <script src="~/js/cart.js"></script>
}